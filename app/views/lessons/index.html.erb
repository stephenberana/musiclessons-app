<div class="table-responsive">
<h1>Students List</h1>
<table class="table table-striped border-dark">
    <thead>
    <tr>
        <th scope="col">Student Name</th>
        <th scope="col">Instrument</th>
        <th scope="col">Session</th>
        <th scope="col" colspan="3" >Options</th>
    </tr>
    </thead>

    <tbody>
        <% @lessons.each do |lesson| %>
            <tr>
                <td><%= lesson.student_name %></td>
                <td><%= lesson.instrument %></td>
                <td><%= lesson.lesson_number %></td>
                <td><%= link_to 'Show', lesson%></td>
                <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
                <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure you want to delete this log?' } %></td>
            </tr>
            <%end%>
        </tbody>
    </table>

    <br> 

<button type="button" class="btn btn-outline-primary" data-mdb-ripple-color="light">
    <p class="text"><%= link_to 'Create New Lesson Log', new_lesson_path %></P>
</button>       

</div>