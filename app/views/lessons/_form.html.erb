<%= form_with(model: lesson) do |form| %>
<div class="form-group">
    <%= form.label :student_name, style: 'padding: 1em' %>    
    <%= form.text_field :student_name, class: 'form-control', style: 'width:40%' %>
</div>

<div class="form-group">
    <%= form.label :instrument, style: 'padding: 1em' %>
    <%= form.text_field :instrument, class: 'form-control', style: 'width:40%' %>
</div>

<div class="form-group">
    <%= form.label :lesson_number, style: 'padding: 1em' %>
    <%= form.number_field :lesson_number, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="form-group">
    <%= form.label :lesson_date, style: 'padding: 1em' %>
    <%= form.date_field :lesson_date, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="form-group">
    <%= form.label :lesson_topic, style: 'padding: 1em' %>
    <%= form.text_field :lesson_topic, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="form-group">
    <%= form.label :lesson_description, style: 'padding: 1em' %>
    <%= form.text_field :lesson_description, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="actions">
    <%= form.submit %>
</div>

<%end%>